<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/bg2"
    android:layout_height="match_parent" >
    
    <Button
        android:id="@+id/exit"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_alignLeft="@+id/dtbutton"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="31dp"
        android:text="退出"
        android:background="@drawable/bg_alibuybutton"
        android:textColor="#FF557F"
        android:textSize="30sp" />

    <Button
        android:id="@+id/dtbutton"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_above="@+id/exit"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="实时识别"
        android:background="@drawable/bg_alibuybutton"
        android:textColor="#FF557F"
        android:textSize="30sp" />

     <TextView
         android:id="@+id/method"
         android:layout_width="wrap_content"
         android:layout_height="30dp"
         android:layout_alignParentTop="true"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="51dp"
         android:text="视线跟踪及其人机交互系统"
         android:textColor="#FF2A2A"
         android:textSize="23sp" />

     <Button
         android:id="@+id/importbutton"
         android:layout_width="300dp"
         android:layout_height="70dp"
         android:layout_above="@+id/dtbutton"
         android:layout_alignLeft="@+id/dtbutton"
         android:layout_marginBottom="17dp"
         android:background="@drawable/bg_alibuybutton"
         android:text="图片识别"
         android:textColor="#FF557F"
         android:textSize="30sp" />

</RelativeLayout>
